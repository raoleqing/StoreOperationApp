<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoreOperation" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.StoreOperation" parent="Base.Theme.StoreOperation" />


    <style name="WhiteBackToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <declare-styleable name="EmptyView">
        <attr name="emptyIcon" format="reference"/>
        <attr name="emptyMessage" format="string"/>
    </declare-styleable>

    <!-- res/values/styles.xml -->
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- 移除搜索框底部横线 -->
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="text_16_colorPrimary">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_14_colorPrimary">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_14_333">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="text_16_333">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="text_18_333">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="text_14_white">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_16_white">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="line_01">
        <item name="android:background">#7C828F</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>

    <style name="line_02">
        <item name="android:background">#ffF5F5F5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>

    <style name="text_8080_14">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="text_8080_16">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="text_F65133_14">
        <item name="android:textColor">#F65133</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="input_01">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="input_02">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="select_01">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:hint">请选择</item>
    </style>

    <style name="select_02">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">right</item>
        <item name="android:hint">请选择</item>
    </style>



    <style name="PasswordDigit">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_password_digit</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">numberPassword</item>
    </style>
</resources>
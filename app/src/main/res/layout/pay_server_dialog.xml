<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_bg1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                style="@style/text_16_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="套餐选择"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_close"/>
        </RelativeLayout>

        <View
            style="@style/line_02"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_height="@dimen/dp_260"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:background="@drawable/shape_w_bg_grey_f_r8"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_16_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式" />

                <Spinner
                    android:id="@+id/spinnerPayType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_22"
                android:orientation="horizontal">

                <android.widget.Button
                    style="@style/text_16_white"
                    android:id="@+id/but_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_52"
                    android:layout_weight="1"
                    android:text="确定"
                    android:stateListAnimator="@null"
                    android:background="@drawable/determine_but_01"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.order.OrderActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_w_bg_grey_f_r8"
                    android:padding="@dimen/dp_12"
                    android:orientation="vertical">

                    <!-- 租户名称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="租户名字" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_tenant_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="名称" />
                    </LinearLayout>

                    <View
                        style="@style/line_02"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="门店名字" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_shop_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="" />
                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_order_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="" />
                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单类型" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_order_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="管理费" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单内容" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>
                    <!-- 联系电话 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数量" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付金额" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_payment_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="￥0" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付方式" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_payment_channel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="10" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付时间" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tv_payment_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="2025-10-10" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_8080_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付状态" />

                            <TextView
                                style="@style/text_16_333"
                                android:id="@+id/tv_payment_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_marginLeft="@dimen/dp_12"
                                tools:text="已支付" />
                        </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_8080_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="审核状态" />

                            <TextView
                                style="@style/text_16_colorPrimary"
                                android:id="@+id/tv_audit_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_marginLeft="@dimen/dp_12"
                                tools:text="待审核" />

                        </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_8080_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="业务员" />

                            <TextView
                                style="@style/text_16_333"
                                android:id="@+id/tv_staff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_marginLeft="@dimen/dp_12"
                                tools:text="张三" />

                        </LinearLayout>

                </LinearLayout>

                <!-- 审批流 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:background="@drawable/shape_w_bg_grey_f_r8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_16_333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="审批进度"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_status"
                            style="@style/text_16_colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="审核中"/>

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_approval_flow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/dp_12"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn_submit"
                style="@style/text_16_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/shape_but_bg1"
                android:text="审批"/>
        </LinearLayout>

    </LinearLayout>
</layout>
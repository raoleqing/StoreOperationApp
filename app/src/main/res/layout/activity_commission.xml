<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_12"
            android:background="@drawable/shape_w_bg_grey_f_r8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:src="@mipmap/avatar_default"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_16_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="名字"/>

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/text_8080_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:text="12345678901" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/shape_w_bg_grey_f_r8"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_8080_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计总提成"/>

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/text_16_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="￥0"/>

            </LinearLayout>

            <View
                style="@style/line_02"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_8080_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当月提成" />

                <TextView
                    android:id="@+id/tv_month_total"
                    style="@style/text_16_colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:background="@drawable/shape_w_bg_grey_f_r8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                style="@style/text_16_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提成流水"
                android:gravity="center_vertical"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_list_total"
                style="@style/text_14_colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:text="(总额：￥0)"/>

            <TextView
                android:id="@+id/tv_month"
                style="@style/text_14_colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/dp_5"
                android:text="2025-10"/>

        </LinearLayout>
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/srl_refresh_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 空状态视图 -->
                <com.tiandao.store.operation.common.weight.EmptyView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:emptyIcon="@mipmap/ic_empty_state"
                    app:emptyMessage="@string/empty_default_message" />

            </RelativeLayout>

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>




    </LinearLayout>
</layout>
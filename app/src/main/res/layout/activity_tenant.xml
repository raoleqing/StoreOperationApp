<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_12"
        android:orientation="vertical"
        tools:context=".ui.tenant.TenantActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:background="@drawable/shape_w_bg_grey_f_r8"
                    android:orientation="vertical">

                    <!-- 租户名称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="租户名称" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvTenantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="租户名称" />
                    </LinearLayout>

                    <View
                        style="@style/line_02"/>
                    <!-- 联系人 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系人" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvContactName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="饶先生" />

                    </LinearLayout>


                    <View
                        style="@style/line_02"/>

                    <!-- 联系电话 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系电话" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvContactPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="联系电话" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>
                    <!-- 联系电话 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="责任人" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvOwnerStaffName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                           />

                    </LinearLayout>


                    <View
                        style="@style/line_02"/>

                    <!-- 版本 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="版本" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="版本" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <!-- 联系邮箱 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系邮箱" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/tvContactEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/dp_12"
                            tools:text="联系邮箱" />

                    </LinearLayout>

                    <View
                        style="@style/line_02"/>

                    <TextView
                        style="@style/text_8080_16"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center"
                        android:text="备注" />
                    <!-- 备注 -->
                    <TextView
                        android:id="@+id/tvRemark"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="请输入内容"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:background="@drawable/shape_edit_bg3"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="vertical">

                    <!-- 租户名称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_12"
                        android:background="@drawable/shape_w_bg_grey_f_r8"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_8080_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="门店列表" />

                        <TextView
                            style="@style/text_16_333"
                            android:id="@+id/shop_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            tools:text="10" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"/>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</layout>